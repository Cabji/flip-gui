{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "-j",
                "6"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building the project.", 
            "presentation": {
                "panel": "new",  // open a new terminal for this task
                "reveal": "always",    // show the terminal output
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "${workspaceFolder}/build/FlipApp.exe",  // Adjust path to your executable
            "group": "test",
            "dependsOn": "build",  // Ensure the project is built before running
            "problemMatcher": []
        }
    ]
}
